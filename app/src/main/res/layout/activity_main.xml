<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#333333" android:id="@+id/mainMenuLayout">
    <TextView
            android:layout_width="353dp"
            android:layout_height="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162" android:textColor="#FFFFFF"
            android:text="Всем приветики пистолетики"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.652" android:id="@+id/first_word"/>
    <Button
            android:layout_width="248dp"
            android:layout_height="57dp" android:id="@+id/collect_data_button"
            android:text="Сбор и анализ данных" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            app:layout_constraintHorizontal_bias="0.496" android:backgroundTint="#EF7217"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.866"/>

</androidx.constraintlayout.widget.ConstraintLayout>