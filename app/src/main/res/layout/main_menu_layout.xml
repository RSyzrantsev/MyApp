<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#333333"
                                                   android:id="@+id/main_menu_layout">
    <ImageButton
            android:layout_width="52dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/ib_settings"
            android:background="#333333" tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046" app:layout_constraintVertical_bias="0.02"/>
    <Button
            android:text="ДОБАВИТЬ НОВЫЙ ПРИЁМ ПИЩИ"
            android:layout_width="367dp"
            android:layout_height="70dp" android:id="@+id/add_eating_button"
            android:backgroundTint="#EF7217"
            tools:ignore="MissingConstraints,TextContrastCheck" android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384" app:layout_constraintVertical_bias="0.932"
            android:textColor="#FAF6F6"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="56dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/ib_user"
            android:background="#333333" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintVertical_bias="0.02" tools:ignore="SpeakableTextPresentCheck"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="390dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/ib_user" android:layout_marginBottom="137dp"
            app:layout_constraintBottom_toTopOf="@+id/add_eating_button" tools:visibility="invisible"
            android:id="@+id/addFormEatView">

        <EditText
                android:layout_width="207dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/edt_add_call"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.072" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.045"/>
        <Button
                android:text="ПОДТВЕРДИТЬ"
                android:layout_width="181dp"
                android:layout_height="50dp" android:id="@+id/button_confirm3"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="#EF7217" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.92"/>
        <EditText
                android:layout_width="211dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/edt_time"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.066" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>