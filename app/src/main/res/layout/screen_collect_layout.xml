<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/screen_collect"
                                                   android:background="#333333">

    <TextView
            android:text="Как вас зовут?"
            android:layout_width="172dp"
            android:layout_height="33dp" android:id="@+id/what_u_name_txt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.081"
            android:textColor="#FAF9F9"
            android:textSize="22sp"/>
    <EditText
            android:layout_width="232dp"
            android:layout_height="68dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_name"
            tools:ignore="MissingConstraints" android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.182" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColorHint="#737272" android:textColor="#555353"
            app:layout_constraintHorizontal_bias="0.515" android:hint="Введите ваше имя"/>
    <TextView
            android:text="Введите ваши данные"
            android:layout_width="235dp"
            android:layout_height="40dp" android:id="@+id/collect_data_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintVertical_bias="0.579" android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/collect_age_edt"
            android:textColor="#605D5D" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.678" android:textColorHint="#737272" android:hint="возраст"/>
    <EditText
            android:layout_width="136dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/collect_height_edt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/collect_age_edt"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.678"
            android:textColor="#737272" android:textColorHint="#737272" android:hint="рост"/>
    <EditText
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/collect_weight_edt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/collect_age_edt"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.678"
            android:textColor="#737272" android:hint="вес" android:textColorHint="#6C6A6A"/>
    <Button
            android:text="подтвердить "
            android:layout_width="208dp"
            android:layout_height="59dp" android:id="@+id/button_confirm1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.448" app:layout_constraintVertical_bias="0.879"
            android:backgroundTint="#EF7217" android:textColorHint="#000000" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>